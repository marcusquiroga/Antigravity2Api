# Use Node.js 18 as the base image\nFROM node:18\n\n# Set the working directory\nWORKDIR /app\n\n# Copy package files\nCOPY package*.json ./\n\n# Install dependencies\nRUN npm install\n\n# Copy application code\nCOPY . .\n\n# Expose port 3000\nEXPOSE 3000\n\n# Run the application\nCMD ["npm", "start"]